<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/IndividualItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="89dp">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/imageFrameLayout"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ItemImageContentDescription"
        app:layout_constraintBottom_toTopOf="@+id/txtViewLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
        android:id="@+id/imgItemPhotoUrl"
         />

        <ProgressBar
            android:id="@+id/itemListprogressBarSmall"
            style="?android:attr/progressBarStyleLarge"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>


    <TextView
        android:id="@+id/txtConntentView"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:drawableTop="@color/cardview_dark_background"
        android:isScrollContainer="true"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:shadowColor="@color/secondaryColor"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
        android:textColorHighlight="@color/secondaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewLocation" />

    <ImageButton
        android:id="@+id/CaptureImageButton"
        android:layout_width="31dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_camera"
        android:tint="@color/secondaryColor"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/txtConntentView"
        app:layout_constraintEnd_toStartOf="@+id/TTSImageButton"
        app:layout_constraintStart_toEndOf="@+id/txtViewLocation"
        app:layout_constraintTop_toBottomOf="@+id/imageFrameLayout" />

    <ImageButton
        android:id="@+id/TTSImageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_lock_silent_mode_off"
        android:tint="@color/secondaryColor"
        app:layout_constraintBottom_toTopOf="@+id/txtConntentView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFrameLayout" />


    <TextView
        android:id="@+id/txtViewLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/txtConntentView"
        app:layout_constraintEnd_toStartOf="@+id/CaptureImageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFrameLayout" />


</android.support.constraint.ConstraintLayout>

